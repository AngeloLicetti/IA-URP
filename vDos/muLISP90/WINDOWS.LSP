	   (NOT (PROBE-FILE FILE-NAME))
	   (PROMPT-YN "Overwrite existing file")
	   (SETQ TMP (PROMPT-YN "Append to existing file")))
	((OPEN-OUTPUT-FILE FILE-NAME TMP)
	  (IF TMP
	      (FILE-WRITE-POSITION (MAX 0 (SUB1 (FILE-LENGTH (OUTPUT-FILE))))) )
	  (RETURN (NORMALIZE-FILE-NAME (OUTPUT-FILE))) )
	(ERROR-MESSAGE "Drive not ready") ) ) ) )

(DEFUN PROMPT-INPUT-FILE (FILE-NAME FILE-TYPE FLAG)
