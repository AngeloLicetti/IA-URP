(DEFUN PARSE-INTEGER (STRING NUM
; Parses digits in STRING in radix base NUM and returns integer; else returns
; NIL.	NUM defaults to 10.  Digits can be preceeded by spaces and a + or -.
; *STRING-INDEX* is a global set to index of character after parsed integer.
    CHAR TMP FLAG )
  (SETQ NUM (OR NUM 10)
	*STRING-INDEX* 0)
  (LOOP
    ((NULL (SETQ CHAR (CHAR STRING *STRING-INDEX*)))  NIL)
    ((NEQ CHAR " ")
      ( ((EQ CHAR '+)
	  (INCQ *STRING-INDEX*) )
	((EQ CHAR '-)
	  (SETQ FLAG 0)
	  (INCQ *STRING-INDEX*) ) )
      ((SETQ CHAR (CHAR STRING *STRING-INDEX*))
	((SETQ TMP (DIGIT-CHAR-P CHAR NUM))
	  (LOOP
	    (INCQ *STRING-INDEX*)
	    ((NULL (SETQ CHAR (CHAR STRING *STRING-INDEX*))))
	    ((NOT (SETQ CHAR (DIGIT-CHAR-P CHAR NUM))))
	    (SETQ TMP (+ (* TMP NUM) CHAR)) )
	  ((NOT FLAG)  TMP)
	  (- TMP) ) ) )
    (INCQ *STRING-INDEX*) ) )

