(DEFUN PROMPT-FILE (FILE-NAME FILE-TYPE FLAG
; Prompts user for a file name using FILE-NAME and FILE-TYPE as the default
; name and type.  Returns the normalized file name.  If the user presses Esc
; or does not specify a file, returns "".
; If FLAG is nonNIL, F1 displays a list of files.
; Fluid arguments:  *OPTION-PROMPT*, *EDIT-TERMINATORS*
; Fluid results:  *SCREEN-CLEARED*
    DIRECTORY PROMPT NUM)
  (SETQ DIRECTORY (DEFAULT-DIRECTORY)
	PROMPT (PACK* (OPTION-PROMPT) " file: "))
  (LOOP
    (SETQ FILE-NAME (STRING-UPCASE (IF FLAG
		((LAMBDA (*EDIT-TERMINATORS*)
       (PROMPT-INPUT "Enter filename (press F1 for list)" PROMPT FILE-NAME))
			  (CONS -59 *EDIT-TERMINATORS*))
       (PROMPT-INPUT "Enter filename" PROMPT FILE-NAME) )))
    ((EQ *LINE-TERMINATOR* 27)	"")			; Esc key
    ((OR (NOT FLAG) (NEQ *LINE-TERMINATOR* -59))	; Not F1 key
      ((EQ FILE-NAME "")  "")
      ((FINDSTRING '"*" FILE-TYPE)  FILE-NAME)
      (NORMALIZE-FILE-NAME FILE-NAME FILE-TYPE) )
    (SET-CURSOR 0 (LENGTH PROMPT))
    (SPACES (LENGTH FILE-NAME))
    (IF (SETQ NUM (FINDSTRING '\. FILE-NAME (FILE-NAME-POSITION FILE-NAME)))
	(SETQ FILE-TYPE (SUBSTRG FILE-NAME (ADD1 NUM))
	      FILE-NAME (SUBSTRG FILE-NAME 0 (FILE-NAME-POSITION FILE-NAME))) )
    ( ((EQ FILE-NAME ""))
      ((EQ (CHAR FILE-NAME 1) ":")
	((EQ (CHAR FILE-NAME 2) \\)
	  (SETQ DIRECTORY FILE-NAME) )
	(SETQ DIRECTORY (PACK* (DEFAULT-DIRECTORY (CHAR FILE-NAME 0))
			       (SUBSTRG FILE-NAME 2))) )
      ((EQ (CHAR FILE-NAME 0) \\)
	(SETQ DIRECTORY (PACK* (SUBSTRG DIRECTORY 0 2) FILE-NAME)) )
      (SETQ DIRECTORY (PACK* (DEFAULT-DIRECTORY (CHAR DIRECTORY 0)) FILE-NAME)) )
    (IF (NEQ (CHAR DIRECTORY (SUB1 (LENGTH DIRECTORY))) \\)
	(SETQ DIRECTORY (PACK* DIRECTORY \\)) )
    (SHOW-PROMPT "Select a file using arrow keys")
    (CURRENT-WINDOW T)
    (SETQ FILE-NAME (SELECT-FILE DIRECTORY FILE-TYPE)
	  *SCREEN-CLEARED* 0)
    (CURRENT-WINDOW T)
    ((EQ *LINE-TERMINATOR* 27)	"")
    ((NEQ *LINE-TERMINATOR* -59)  FILE-NAME) ) )

(DEFUN DEFAULT-DIRECTORY (DRIVE)
  (SETQ DRIVE (OR DRIVE (DEFAULT-DRIVE)))
  (PACK* DRIVE ":" (DEFAULT-PATH DRIVE) \\) )

(DEFUN SELECT-FILE (DIRECTORY FILE-TYPE
    LST1 LST2 TMP1 TMP2 TMP3 NUM ROW COL COLUMN COLUMNS)
  (SETQ LST1 (SORT (DIRECTORY (PACK* DIRECTORY "*." FILE-TYPE)) 'STRING<))
  ((OR (< (COLUMNS) 12) (NULL LST1))
    (ERROR-BEEP)
    "" )
  (LOOP
    ((NULL LST1))
    (PUSH (FIRSTN (ROWS) LST1) LST2)
    (SETQ LST1 (NTHCDR (ROWS) LST1)) )
  (SETQ LST1 (NREVERSE LST2)
	NUM 18)
  (LOOP 	; loop to try to squeeze it on one screen
    (SETQ COLUMNS (TRUNCATE (+ (COLUMNS) NUM -12) NUM))
    ((<= (LENGTH LST1) COLUMNS))
    ((<= (DECQ NUM) 12)
      (SETQ NUM 14)
      (LOOP	; loop to maximize spacing without losing any columns
	(SETQ COLUMNS (TRUNCATE (+ (COLUMNS) NUM -12) NUM))
	((= NUM 18))
	(INCQ NUM)
	((/= COLUMNS (TRUNCATE (+ (COLUMNS) NUM -12) NUM))
	  (DECQ NUM) ) ) ) )

  (SETQ COLUMN 0
	COL 0
	ROW 0)
  (LOOP
    (CURRENT-WINDOW)
    ( ((EQL TMP1 COLUMN))			; files already displayed
      (DISPLAY-FILES (NTHCDR COLUMN LST1))
      (SETQ TMP1 COLUMN
	    TMP2) )
    ( ((AND (EQL TMP2 COL) (EQL TMP3 ROW)))	; correct file highlighted
      ( ((NOT TMP2))
	(SET-CURSOR TMP3 (* TMP2 NUM))
	(WRITE-STRING (NTH TMP3 (NTH (+ TMP2 COLUMN) LST1))) )
      (SETQ TMP2 COL
	    TMP3 ROW)
      (CHANGE-COLOR (CAR (WORK-BACKGROUND)) (CAR (WORK-COLOR)))
      (SET-CURSOR TMP3 (* TMP2 NUM))
      (WRITE-STRING (NTH TMP3 (NTH (+ TMP2 COLUMN) LST1)))
      (OPTION-WINDOW)
      (SET-CURSOR 0 (LENGTH PROMPT))
      (SPACES (- (+ 12 (LENGTH DIRECTORY))
		 (LENGTH (WRITE-STRING (PACK* DIRECTORY
					      (NTH TMP3 (NTH (+ TMP2 COLUMN) LST1))))))) )

    (SETQ *LINE-TERMINATOR* (CONSOLE-BYTE (READ-BYTE T))
	  *LINE-TERMINATOR* (OR (CDR (ASSOC *LINE-TERMINATOR* *CURSOR-KEYS*)) *LINE-TERMINATOR*))
    ((MEMBER *LINE-TERMINATOR* (CONS -59 *EDIT-TERMINATORS*))
      (PACK* DIRECTORY (NTH ROW (NTH (+ COL COLUMN) LST1))) )

    ( ((= *LINE-TERMINATOR* 5)					; Up arrow
	((ZEROP ROW)
	  ((ZEROP COL)
	    ((ZEROP COLUMN))
	    (DECQ COLUMN)
	    (SETQ ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1)))) )
	  (DECQ COL)
	  (SETQ ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1)))) )
	(DECQ ROW) )
      ((= *LINE-TERMINATOR* 18) 				; PgUp
	((ZEROP ROW)
	  ((ZEROP COL)
	    ((ZEROP COLUMN))
	    (DECQ COLUMN) )
	  (DECQ COL) )
	(SETQ ROW 0) )

      ((= *LINE-TERMINATOR* 24) 				; Down arrow
	((>= ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1))))
	  ((NTH (+ COL COLUMN 1) LST1)
	    (SETQ ROW 0)
	    ((>= COL (SUB1 COLUMNS))
	      (INCQ COLUMN) )
	    (INCQ COL) ) )
	(INCQ ROW) )
      ((= *LINE-TERMINATOR* 3)					; PgDn
	( ((>= ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1))))
	    ((NTH (+ COL COLUMN 1) LST1)
	      ((>= COL (SUB1 COLUMNS))
		(INCQ COLUMN) )
	      (INCQ COL) ) ) )
	(SETQ ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1)))) )

      ((= *LINE-TERMINATOR* 19) 				; Left arrow
	((ZEROP COL)
	  ((ZEROP COLUMN))
	  (DECQ COLUMN) )
	(DECQ COL) )
      ((= *LINE-TERMINATOR* 1)					; Ctrl-Left arrow
	((ZEROP COL)
	  ((ZEROP COLUMN))
	  (DECQ COLUMN) )
	(SETQ COL 0) )

      ((= *LINE-TERMINATOR* 4)					; Right arrow
	((NTH ROW (NTH (+ COL COLUMN 1) LST1))
	  ((>= COL (SUB1 COLUMNS))
	    (INCQ COLUMN) )
	  (INCQ COL) ) )
      ((= *LINE-TERMINATOR* 6)					; Ctrl-Right arrow
	((NTH ROW (NTH (+ COL COLUMN 1) LST1))
	  ((>= COL (SUB1 COLUMNS))
	    (INCQ COLUMN) )
	  (SETQ COL (SUB1 (MIN COLUMNS (- (LENGTH LST1) COLUMN))))
	  ((NTH ROW (NTH (+ COL COLUMN) LST1)))
	  (DECQ COL) ) )

      ((= *LINE-TERMINATOR* -71)				; Home
	(SETQ COLUMN 0
	      COL 0
	      ROW 0) )
      ((= *LINE-TERMINATOR* -79)				; End
	(SETQ COLUMN (MAX 0 (- (LENGTH LST1) COLUMNS))
	      COL (SUB1 (- (LENGTH LST1) COLUMN))
	      ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1)))) )

      ((AND (PLUSP *LINE-TERMINATOR*) (ALPHANUMERICP (ASCII *LINE-TERMINATOR*)))
	(SETQ COLUMN 0
	      COL 0)
	(LOOP
	  ((SETQ ROW (POSITION (CHAR-UPCASE (ASCII *LINE-TERMINATOR*))
			       (NTH (+ COL COLUMN) LST1)
			       'CHAR<=)))
	  ((NOT (NTH (+ COL COLUMN 1) LST1))
	    (SETQ ROW (SUB1 (LENGTH (NTH (+ COL COLUMN) LST1)))) )
	  (IF (>= COL (SUB1 COLUMNS))
	      (INCQ COLUMN)
	      (INCQ COL) ) ) ) )

    (IF (AND (EQL TMP1 COLUMN) (EQL TMP2 COL) (EQL TMP3 ROW))
	(ERROR-BEEP) ) ) )

(DEFUN DISPLAY-FILES (LST1
; Display file names in LST1.  Fluids: COLUMNS NUM
    ROW COL LST2)
  (SETQ COL 0)
  (LOOP
    ((NULL LST1))
    (SETQ LST2 (POP LST1)
	  ROW 0)
    (LOOP
      (SET-CURSOR ROW (* COL NUM))
      ( ((NULL LST2)
	  (SPACES 12) )
	(WRITE-STRING (CAR LST2))
	(SPACES (- 12 (LENGTH (POP LST2)))) )
      ((= (INCQ ROW) (ROWS))) )
    ((>= (INCQ COL) COLUMNS)) ) )

