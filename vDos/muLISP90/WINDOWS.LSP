(DEFUN SETUP-QUERY LST
  (MAPC 'RPLACA (CAR LST) (CDR LST)) )

(DEFUN MODE-QUERY (OPTIONS NUM1 COLUMN
    NUM QUERY ROWS COLUMNS)
  (MODE-QUERY-AUX)
  (LOOP
    (SETQ QUERY (NTH NUM OPTIONS))
    (RPLACA QUERY (APPLY 'MAKE-QUERY (NTH NUM ROWS) (NTH NUM COLUMNS) QUERY))
    ((MEMBER *LINE-TERMINATOR* *EDIT-TERMINATORS*)
      (NEQ *LINE-TERMINATOR* 27) )
    ((AND (ZEROP *LINE-TERMINATOR*) (EQ (LENGTH OPTIONS) 1)))
    ( ((OR (EQ *LINE-TERMINATOR* 9) (ZEROP *LINE-TERMINATOR*))
	(SETQ NUM (MOD (ADD1 NUM) (LENGTH OPTIONS))) )
      ((OR (EQ *LINE-TERMINATOR* 2) (EQ *LINE-TERMINATOR* -15))
	(SETQ NUM (MOD (SUB1 NUM) (LENGTH OPTIONS))) ) ) ) )

(DEFUN MODE-QUERY-AUX ()
  (OPTION-WINDOW 0)
  (IF (NEQ (WRITE-STRING (OPTION-PROMPT)) "")
      (WRITE-STRING ": ") )
  (SETQ COLUMN (OR COLUMN (IF (NARROW-SCREENP) 1 (COLUMN)))
	NUM 0)
  (LOOP
    ((= NUM (LENGTH OPTIONS)))
    (SETQ QUERY (NTH NUM OPTIONS))
    (IF (> (+ (COLUMN) (LENGTH (THIRD QUERY)) 2 (QUERY-LENGTH (FOURTH QUERY)))
	   *SCREEN-COLS*)
	(SET-CURSOR (ADD1 (ROW)) COLUMN) )
    (IF (ZEROP (COLUMN))
	(SET-CURSOR (ROW) COLUMN) )
    (WRITE-STRING (THIRD QUERY))
    (IF (AND (NEQ (THIRD QUERY) "")
	     (EQ (THIRD QUERY) (STRING-RIGHT-TRIM " " (THIRD QUERY))))
	(WRITE-STRING ": "))
    (PUSH (ROW) ROWS)
    (PUSH (COLUMN) COLUMNS)
    (IF (INTEGERP (FOURTH QUERY))
	(WRITE-STRING (SUBSTRING (MAKE-STRING (CAR QUERY)) 0
				 (SUB1 (MIN (FOURTH QUERY)
					    (- *SCREEN-COLS* (COLUMN))))))
	(SHOW-MODES (CAR QUERY) (FOURTH QUERY)) )
    (SET-CURSOR (ROW) (MIN (SUB1 *SCREEN-COLS*)
			   (+ (CAR COLUMNS) (QUERY-LENGTH (FOURTH QUERY)) 1)))
    (INCQ NUM) )
  (SETQ ROWS (NREVERSE ROWS)
	COLUMNS (NREVERSE COLUMNS)
	NUM (IF (INTEGERP NUM1) (MOD NUM1 (LENGTH OPTIONS)) 0)) )

(DEFUN OPTION-PROMPT ()
;   TMP)
  ((AND (EQ (SUBSTRING *OPTION-PROMPT* 0 8) "TRANSFER ")
	(>= (COUNT " " (UNPACK *OPTION-PROMPT*)) 3))
    (SUBSTRING *OPTION-PROMPT* 9) )
; ((AND (NARROW-SCREENP)
;	(MEMBER " " (SETQ TMP (CDR (MEMBER " " (UNPACK TMP))))))
;   (PACK TMP) )
  *OPTION-PROMPT* )

(DEFUN MAKE-QUERY (ROW COLUMN DEFAULT PROMPT CHAR OPTIONS
    POSITION NUM )
  ((INTEGERP OPTIONS)
    (SHOW-PROMPT PROMPT)
    (OPTION-WINDOW)
    (SET-CURSOR ROW COLUMN)
    (SETQ NUM (KEY-TRANSLATION 9 0))			; Disable tabbing
    (PROG1 (LINE-EDITOR DEFAULT (LIST* 9 2 -15 *EDIT-TERMINATORS*) 0 0 OPTIONS)
	   (KEY-TRANSLATION 9 NUM) ) )			; Enable tabbing
  (SETQ NUM (OR (POSITION DEFAULT OPTIONS) 0))
  (LOOP
    (OPTION-WINDOW)
    (SET-CURSOR ROW (SUB1 COLUMN))
    (SPACES 1)
    (SETQ *LINE-TERMINATOR* (SELECT-OPTION NUM OPTIONS PROMPT))
    ((MEMBER *LINE-TERMINATOR* '(27 13 10 9 2 -15)))
    ((OR (SETQ POSITION (POSITION (CHAR-UPCASE (ASCII *LINE-TERMINATOR*))
				OPTIONS 'CHAR=))
	 (AND (ALPHA-CHAR-P (ASCII *LINE-TERMINATOR*))
	      (SETQ POSITION (POSITION (CHAR-UPCASE (ASCII *LINE-TERMINATOR*))
				     OPTIONS 'FINDSTRING))))
      (SETQ NUM POSITION
	    *LINE-TERMINATOR* 0) )
    ( ((= *LINE-TERMINATOR* 32)
	(SETQ NUM (MOD (ADD1 NUM) (LENGTH OPTIONS))) )
      ((= *LINE-TERMINATOR* 8)
	(SETQ NUM (MOD (SUB1 NUM) (LENGTH OPTIONS))) )
      (ERROR-BEEP) ) )
  (SETQ DEFAULT (NTH NUM OPTIONS))
  (OPTION-WINDOW)
  (SET-CURSOR ROW COLUMN)
  (SHOW-MODES DEFAULT OPTIONS)
  DEFAULT )

(DEFUN SHOW-MODES (DEFAULT OPTIONS
    NUM)
  (SETQ NUM (POSITION DEFAULT OPTIONS)
	OPTIONS (TRIM-OPTIONS OPTIONS))
  (LOOP
    ((NULL OPTIONS))
    ( ((ZEROP NUM)
	(WRITE-BYTE 8)
	(WRITE-STRING "(")
	(WRITE-STRING (POP OPTIONS))
	(WRITE-STRING ")") )
      (WRITE-STRING (POP OPTIONS))
      (SPACES 1) )
    (DECQ NUM) ) )

(DEFUN SELECT-OPTION (DEFAULT OPTIONS PROMPT
    MODE NUM)
  (SETQ OPTIONS (TRIM-OPTIONS OPTIONS)
	NUM 0)
  (LOOP
    ((NULL OPTIONS))
    (SETQ MODE (POP OPTIONS))
    ( ((EQ NUM DEFAULT)
	(CHANGE-COLOR *MENU-BACKGROUND* *OPTION-COLOR* 0)
	(WRITE-STRING MODE)
	(CHANGE-COLOR *OPTION-COLOR* *MENU-BACKGROUND*) )
      (WRITE-STRING MODE) )
    ( ((ZEROP (COLUMN)))
      (SPACES 1) )
    (INCQ NUM) )
  (READ-OPTION-BYTE PROMPT) )

(DEFUN TRIM-OPTIONS (OPTIONS
    LST TMP)
  ((<= (+ (COLUMN) (QUERY-LENGTH OPTIONS)) *SCREEN-COLS*)  OPTIONS)
  (SETQ OPTIONS (COPY-LIST OPTIONS))
  (LOOP
    ((<= (+ (COLUMN) (QUERY-LENGTH OPTIONS)) *SCREEN-COLS*)  OPTIONS)
    (SETQ LST OPTIONS
	  TMP "")
    (LOOP					; Find longest option name
      ((NULL LST))
      ( ((<= (LENGTH (CAR LST)) (LENGTH TMP)))
	((OR (NUMERIC-CHAR-P (CAR LST)) (SOME 'UPPER-CASE-P (UNPACK (CAR LST))))
	  (SETQ TMP (CAR LST)) ) )
      (POP LST) )
    ((= (LENGTH TMP) 1)  OPTIONS)
    (SETQ OPTIONS (NSUBSTITUTE (SUBSTRING TMP 0 (- (LENGTH TMP) 2)) TMP OPTIONS)) ) )

(DEFUN QUERY-LENGTH (OPTIONS
    NUM)
  ((INTEGERP OPTIONS)
    (ADD1 OPTIONS) )
  (SETQ NUM (LENGTH OPTIONS))
  (LOOP
    ((NULL OPTIONS) NUM)
    (INCQ NUM (LENGTH (POP OPTIONS))) ) )

